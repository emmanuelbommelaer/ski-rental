<div class="container">
  <div class="d-flex justify-content-between">
    <div>
      <h2><%= @products.first.user.first_name %> <%= @products.first.user.last_name %></h2>
      <p><%= @products.first.user.address %></p>
    </div>
    <%= button_to "Back to all products", products_path, class: "btn btn-primary", method: :get %>
  </div>
      <div class="cards">
        <% @products.each do |product| %>
          <%= link_to product_path(product) do %>
            <div class="card" >
                <h3><%= product.name %></h3>
                <div class="image">
                  <%= cl_image_tag(product.photo.key,
                        height: 200,
                        crop: :fill) %>
                </div>
                <p><%= product.price_per_day %> euros per day</p>
            </div>
          <% end %>
        <% end %>
      </div>
</div>
