<div class="container">
  <div class="d-flex justify-content-between">
    <div>
      <h2><%= @products.first.user.first_name %> <%= @products.first.user.last_name %></h2>
      <p><%= @products.first.user.address %></p>
    </div>
    <%= button_to "Back to all products", products_path, class: "btn btn-primary", method: :get %>
  </div>
  <div id="hits">
    <div class="ais-Hits">
      <ol class="ais-Hits-list">
        <% @products.each do |product| %>
          <li class="ais-Hits-item">
            <a class="hit-link" href="/products/<%= product.id %>">
              <div class="hit-image">
                <img height="200" src="<%= product.photo.url %>" alt=""/>
              </div>
              <h3 class="hit-name"><%= product.name %></h3>
              <div class="hit-data">
                <p class="category-tag"><%= product.category %></p>
                <p class="price-tag">â‚¬<%= product.price_per_day.to_i %>/day</p>
              </div>
            </a>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>
