<div class="container">
  <div class="cards">
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="card" >
            <h3><%= product.name %></h3>
            <%= cl_image_tag(product.photo.key)%>
            <p><%= product.price_per_day %> euros per day</p>

        </div>
      <% end %>
    <% end %>

  </div>
</div>
