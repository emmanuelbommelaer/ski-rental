<div class="row">

  <div class="col-8">
    <div class="container">
      <div class="cards">
        <% @products.each do |product| %>
          <%= link_to product_path(product) do %>
            <div class="card" >
                <h3><%= product.name %></h3>
                <div class="image">
                  <%= cl_image_tag(product.photo.key,
                        height: 200,
                        crop: :fill) %>
                </div>
                <p><%= product.price_per_day %> euros per day</p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-4">
    <div id="map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

</div>
