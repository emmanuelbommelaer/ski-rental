<div class="container">
<div class="d-flex justify-content-between">
  <h2 class="mb-4">My sales portfolio</h2>
  <%= link_to "Back to products", products_path %>
</div>
  <% @owned_bookings.each do |b| %>
    <div class="booking-line row">
      <div class="col-1">
        <%= cl_image_tag(b.product.photo.key,
                          :background=>"#F4F4F4",
                          width: 60,
                          height: 60,
                          crop: :fill) %>
      </div>
      <div class="col-2">
        <%= b.product.name %>
      </div>
      <div class="col-1">
        <span class="category-tag"><%= b.product.category %></span>
      </div>
      <div class="col-3">
        <%= "Loué du #{b.start_date.strftime("%d/%m/%Y")} au #{b.end_date.strftime("%d/%m/%Y")}" %>
      </div>
      <div class="col-2">
        Prix total: <%= b.product.price_per_day * ((b.end_date - b.start_date)/86_400).ceil %>€
      </div>
      <div class="col-2">
        Loué à <%= b.user.first_name %> <%= b.user.last_name %>
      </div>
      <div class="col-1">
        <span class="status-tag"><%= b.status %></span>
      </div>
    </div>
    <% end %>
  </div>
</div>
