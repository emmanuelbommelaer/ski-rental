<%= simple_form_for booking, html: { class: "no-bs-validation row row-cols-auto align-items-center" } do |f| %>
  <%= f.input :status,
              label: false,
              include_blank: false,
              wrapper_html: { class: "mb-auto" },
              collection: Booking::BOOKING_STATUS %>
  <%= f.button :submit, value: "Submit", class: 'btn btn-primary' %>
<% end %>
